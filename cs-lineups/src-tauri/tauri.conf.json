{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "cs-lineups",
  "version": "0.1.3",
  "identifier": "com.patri.cs-lineups",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "CS Lineups",
        "width": 1280,
        "height": 800
      }
    ],
    "security": {
      "csp": {
        "default-src": "'self'",
        "script-src": "'self' 'unsafe-inline'",
        "style-src": "'self' 'unsafe-inline'",
        "img-src": "'self' data: https://*.supabase.co",
        "font-src": "'self' data:",
        "connect-src": "'self' https://*.supabase.co https://github.com",
        "object-src": "'none'",
        "base-uri": "'self'",
        "form-action": "'self'",
        "frame-ancestors": "'none'"
      },
      "assetProtocol": {
        "enable": true,
        "scope": ["**"]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDQ0NDgxNjNBMDNDQzAxOEQKUldTTkFjd0RPaFpJUktHREVMMW9xMUNWdVNPMjM3RTZna0RzeGZtZFZVZmJ2dTdxRTdsTjlRK2cK",
      "endpoints": [
        "https://github.com/tur-ky/lineup/releases/latest/download/latest.json"
      ],
      "dialog": false,
      "windows": {
        "installMode": "passive"
      }
    }
  }
}